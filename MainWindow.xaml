                </Rectangle>
                <Rectangle x:Name="jupiter" Stroke="White" StrokeThickness="0" RadiusX="90" RadiusY="90" Width="60" Height="60" RenderTransformOrigin="0.5,0.5" Canvas.Left="574" Canvas.Top="498">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Resources/jupiter.png" TileMode="FlipX" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="saturn" Stroke="White" StrokeThickness="0" Width="102" Height="102" RenderTransformOrigin="0.5,0.5" Canvas.Left="552" Canvas.Top="543" RadiusX="90" RadiusY="180">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Resources/saturn1.png" Stretch="Uniform"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="uran" Stroke="White" StrokeThickness="0" RadiusX="90" RadiusY="90" Width="33" Height="33" RenderTransformOrigin="0.5,0.5" Canvas.Left="588" Canvas.Top="645">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Resources/Uranus.png" TileMode="FlipX" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="neptun" Stroke="White" StrokeThickness="0" RadiusX="90" RadiusY="90" Width="32" Height="32" RenderTransformOrigin="0.5,0.5" Canvas.Left="588" Canvas.Top="712">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Resources/Neptune.png" TileMode="FlipX" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Canvas>
        </Canvas>
        <Button x:Name="btnSekvencijalno" Content="Započni sekvencijalno izvršenje" HorizontalAlignment="Left" Margin="163,252,0,0" VerticalAlignment="Top" Width="217" Height="32" Click="btnSekvencijalno_Click"/>
        <TextBox x:Name="txtSekvencijalno" HorizontalAlignment="Left" Height="22" Margin="163,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217" TextAlignment="Center" IsEnabled="False"/>
        <Button x:Name="btnParalelno" Content="Započni paralelno izvršenje" HorizontalAlignment="Left" VerticalAlignment="Top" Width="217" Height="32" Click="btnParalelno_Click" Margin="162,347,0,0"/>
        <TextBox x:Name="txtParalelno" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="217" TextAlignment="Center" Margin="162,394,0,0" IsEnabled="False"/>
    </Grid>
</Window>
